# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=workspace_db
DB_SSL=false

# Default Email Domain Configuration (will be stored in DB after setup)
ALLOWED_EMAIL_DOMAINS=limsathya.com

# Authentication
# JWT secret for token signing (generate a strong random string)
JWT_SECRET=your-jwt-secret-key-here
# Token expiration time in seconds (default: 7 days)
TOKEN_EXPIRATION=604800

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Default SMTP Settings (will be stored in DB after setup)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@limsathya.com
SMTP_SECURE=false

# Storage settings (for file uploads)
STORAGE_TYPE=local # or 's3', 'azure', etc.
STORAGE_PATH=./uploads # for local storage
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key